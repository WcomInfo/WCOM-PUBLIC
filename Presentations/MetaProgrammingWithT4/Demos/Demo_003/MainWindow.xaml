<Window x:Class="Demo_003.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="clr-namespace:Demo_003"
        Title="MainWindow" MinHeight="350" MinWidth="525"
        >
    <Window.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Offset="0" Color="#EEE"/>
            <GradientStop Offset="1" Color="#BBB"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="4" ScaleY="4"/>
        </Grid.LayoutTransform>

        <StackPanel
            >

            <d:WaterMarkTextBox Margin="20"/>
            <TextBox Margin="20" />

        </StackPanel>

    </Grid>
</Window>
